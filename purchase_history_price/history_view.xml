<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_purchase_order_history_price_form">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="date_order" position="before">
                    <group colspan="4" col="3">
                        <field name="history_price" />
                        <button name="force_price_product_order" string="Update history now" type="object" colspan="1" confirm="ATTENZIONE: Gli attuali prezzi verranno impostati come riferimento ultimo acquisto (controllare che non siano a ZERO), confermi?"/>
                    </group>     
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_product_product_history_price_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="history_price" />
                </field>                
            </field>
        </record>
    </data>
</openerp>

